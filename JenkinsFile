pipeline {
    agent any
    tools {
        nodejs "nodeJs"
    }
    stages {
        stage('initialize') {
            steps {
                echo 'initializing'
            }
        }
        stage('check npm installed') {
            steps {
                sh 'npm --version'
            }
        }
        stage('clone repository') {
            steps {
                git branch: 'master', url:'https://github.com/felixivance/gallery-devops.git'
            }  
        }
        stage('build code') {
            steps {
                sh 'npm install'
            }
        }
    }
}