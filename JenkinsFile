pipeline{
    agent any
    tools{
        npm 'NodeJs'
    }
    stages{
        stage('clone repository'){
            steps{
                git branch: 'master', url:'https://github.com/felixivance/gallery-devops.git'
            }  
        }
        stage('build code'){
            steps{
                sh 'npm install'
            }
        }
        stage('test code'){
            steps{
                sh 'npm run test'
            }
        }
    }
}